{{define "template_1"}}
    <h2>Template 1</h2>
    {{range $person := .}}
        <h3>{{$person.Name}} {{$person.Surname}}</h3>
        <table>
            <tr>
                <th>Class</th>
                <th>Score</th>
            </tr>
            {{range $class := $person.Classes}}
                <tr>
                    <td>{{$class.Class}} {{.SayHi}}</td>
                    <td>{{$class.Score}}</td>
                </tr>
            {{end}}
        </table>
    {{end}}
{{end}}

